<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-12 col-md-8 col-lg-6 col-xl-5 bg-white">
      <h2 class="mt-3">Add a new Instrument</h2>
      <%= simple_form_for(@instrument) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :details %>
          <div style="width: 25%;" >
            <%= f.input :price_per_day %>
          </div>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden%>
        </div>

        <div class="btn btn-success my-3 ">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>


