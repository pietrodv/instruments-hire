<h1>Instruments#new</h1>
<p>Find me in app/views/instruments/new.html.erb</p>

<%= simple_form_for(@instrument) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :details %>
    <%= f.input :price_per_day %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div>
    <%= f.button :submit %>
  </div>
<% end %>
