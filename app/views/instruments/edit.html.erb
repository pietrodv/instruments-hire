<div class="container mt-5">
  <h1>Edit <%= @instrument.name %></h1>
  <br>
  <%= simple_form_for(@instrument) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :details %>
      <%= f.input :price_per_day %>
      <%= f.input :photo %>
      <%= f.association :category, collection: Category.order(:name)%>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div>
      <%= f.button :submit, class:"btn btn-outline-success mb-2" %>
    </div>
  <% end %>

  <%= link_to 'Go back', instrument_path %>
</div>
