 <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<h1 class="header">List of instruments</h1>
<div class="cards mb-5">
  <% @instruments.each do |instrument| %>
    <%= link_to instrument_path(instrument) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1510915361894-db8b60106cb1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80')">
        <%= instrument.name %>
      </div>
    <% end %>
  <% end %>


<!-- When our instrument has a photo, we can use <%#= cl_image_path instrument.photo %> -->
</div>

