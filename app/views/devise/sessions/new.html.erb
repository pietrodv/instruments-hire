<div class="container mt-5">
  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-11 col-sm-12 col-md-8 col-lg-5 col-xl-5 bg-white py-3">
        <h2 style="text-align: center;">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="button-container-2" style="margin-left: 5px; margin-bottom: 10px; ">
            <span class="mas">Login</span>
            <button type="submit" name="Hover" action="/users/sign_in">Login</button>
          </div>
          <%= render "devise/shared/links" %>

        <% end %>

      </div>
    </div>
  </div>
</div>

