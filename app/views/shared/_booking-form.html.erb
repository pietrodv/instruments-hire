<div class="bg-white" style="position: sticky; top: 70px;">
  <div class="d-flex justify-content-center pb-2 border-bottom">
    <h1 class="header mb-0 pt-3">Like it? Rent it 😎</h1>
  </div>
  <div class="px-2 pb-2">
    <%= simple_form_for [@instrument, @booking] do |f| %>

      <div class="form_inputs my-4 mb-5">
        <%= f.input :start_date, label: 'From:', as: :string, required: true, input_html: { id: "range_start" } %>
        <%= f.input :end_date, label: 'To:', as: :string, required: true, input_html: { id: "range_end" } %>
      </div>

      <div class="form_actions mb-4 px-4">
        <%= f.button :submit, "Rent for #{@instrument.price_per_day} € / day", class:"btn btn-info btn-block" %>
      </div>
    <% end %>
  </div>
</div>
